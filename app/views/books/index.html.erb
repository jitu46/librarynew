<h1>Listing Books</h1>
<table style="width: 100%">
	<thead>
		<tr>
			<th>Title</th>
			<th>Info</th>
			<th>User</th>
		</tr>
	</thead>
	<tbody>
		<% @books.each do |book| %>
			<tr>
				<td><%= truncate(book.title, :length => 15) %></td>
				<td><%= truncate(book.body, :length => 20) %></td>
				<td><%= book.user.email %></td>
				<br>
				<th><%= link_to "Read Book", book %></th>
				<% if book.user == current_user %>
					<th><%= link_to "Edit Book", edit_book_path(book) %></th>
					<th><%= link_to "Delete", book, method: :delete, data: {confirm: "Are you sure?"} %></th>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>

